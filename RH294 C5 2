---
- name: Jinja Templating 
  hosts: all
  rmeote_user: root
  become: true
  vars:
    system_user: userx@example.com
  tasks:
    - name: creating a file using the template
      template:
         src: motd.j2
         dest: /etc/motd
         owner: root
         group: root
         mode: 0664
